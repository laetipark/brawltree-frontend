{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "noEmitOnError": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "vite/client",
      "vite-plugin-svgr/client"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "incremental": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "~/common/*": [
        "./src/common/*"
      ],
      "~/config/*": [
        "./src/config/*"
      ],
      "~/components/*": [
        "./src/components/*"
      ],
      "~/context/*": [
        "./src/context/*"
      ],
      "~/hooks/*": [
        "./src/hooks/*"
      ],
      "~/interfaces/*": [
        "./src/interfaces/*"
      ],
      "~/locales/*": [
        "./src/locales/*"
      ],
      "~/pages/*": [
        "./src/pages/*"
      ],
      "~/services/*": [
        "./src/services/*"
      ],
      "~/utils/*": [
        "./src/utils/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}